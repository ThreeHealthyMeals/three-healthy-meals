{{>fragments/header}}
<div class="row">
    <div class="col-lg-12">
        <h1>로그인 페이지</h1>
        <form method="post" action="/login">
            <div class="form-group">
                <input type="email" class="form-control" name="username" placeholder="이메일을 입력하세요.">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="비밀번호를 입력하세요.">
            </div>
            <input type="hidden" name="_csrf" value="{{#_csrf}}token{{/_csrf}}" />
            <div class="form-group">
                <input type="submit" class="form-control btn btn-primary" value="로그인">
            </div>
        </form>

        <a class="btn btn-primary" href="/">메인 페이지로</a>
        <a class="btn btn-primary" href="/sign-up">회원가입</a>
    </div>
</div>
{{>fragments/footer}}